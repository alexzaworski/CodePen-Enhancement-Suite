{
  "manifest_version": 2,
  "name": "CodePen Enhancement Suite",
  "description": "A collection of enhancements for CodePen.",
  "version": "0.7.4",
  "icons": {
    "16":  "core/icons/icon-16.png",
    "48":  "core/icons/icon-48.png",
    "128": "core/icons/icon-128.png"
  },
  "options_page": "core/options/options.html",
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["lib/bg.js"]
  },
  "content_scripts": [
    {
      "matches":["http://codepen.io/*", "https://codepen.io/*"],
      "js": [
        "dist/bundle.js"
      ],
      "css": [
        "lib/style.css"
      ]
    }
  ],
  "page_action": {
    "default_popup" : "core/popup/popup.html"
  },
  "web_accessible_resources": [
    "modules/**/*",
    "dist/*"
  ]
}