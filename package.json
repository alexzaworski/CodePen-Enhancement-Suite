{
  "scripts": {
    "lint": "echo \"Linting....\" && semistandard --fix --env browser",
    "lint-no-fix": "echo \"Linting....\" && semistandard --env browser",
    "sass": "node-sass --output ces/dist/css --output-style compressed ces/src/css/",
    "zip": "rm -f ces.zip && zip -r ces.zip ces -x *.map *src* *DS_Store*",
    "dev": "npm run sass && concurrently \"webpack -w\" \"npm run sass -- --watch --recursive\"",
    "build": "npm run lint-no-fix && npm run sass && webpack -p && npm run zip"
  },
  "semistandard": {
    "globals": [
      "chrome",
      "$",
      "CES",
      "CP",
      "Hub"
    ]
  },
  "pre-commit": {
    "run": "lint-no-fix"
  },
  "devDependencies": {
    "concurrently": "^3.4.0",
    "node-sass": "^4.5.2",
    "pre-commit": "^1.2.2",
    "semistandard": "^10.0.0",
    "webpack": "fulls1z3/webpack#v2.1.0-beta.27-harmony"
  },
  "dependencies": {
    "escape-html": "^1.0.3"
  }
}
