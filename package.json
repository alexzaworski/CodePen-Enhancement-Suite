{
  "scripts": {
    "lint": "echo \"Linting....\" && semistandard --fix --env browser",
    "lint-no-fix": "echo \"Linting....\" && semistandard --env browser",
    "zip": "rm -f ces.zip && zip -r ces.zip ces -x *.map *src* *DS_Store*",
    "build": "npm run lint-no-fix && webpack -p && npm run zip"
  },
  "semistandard": {
    "globals": [
      "chrome",
      "$",
      "CES",
      "CP",
      "Hub"
    ]
  },
  "pre-commit": {
    "run": "lint-no-fix"
  },
  "devDependencies": {
    "css-loader": "^0.27.1",
    "node-sass": "^4.5.0",
    "pre-commit": "^1.2.2",
    "sass-loader": "^6.0.3",
    "semistandard": "^10.0.0",
    "style-loader": "^0.15.0",
    "webpack": "fulls1z3/webpack#v2.1.0-beta.27-harmony"
  },
  "dependencies": {
    "escape-html": "^1.0.3"
  }
}
