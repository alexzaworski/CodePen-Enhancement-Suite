{
  "manifest_version": 2,
  "name": "CodePen Enhancement Suite",
  "description": "A collection of enhancements for CodePen.",
  "version": "0.4.0",
  "icons": {
    "16":  "core/icons/icon-16.png",
    "48":  "core/icons/icon-48.png",
    "128": "core/icons/icon-128.png"
  },
  "options_page": "core/html/ces_options.html",
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["core/js/bg.js"]
  },
  "content_scripts": [
    {
      "matches":["http://codepen.io/*", "https://codepen.io/*"],
      "js":[
        "core/js/init.js",
        "core/js/profileCSSHandler.js",
        "core/js/customThemeHandler.js",
        "core/js/cesUpdates.js"
      ]
    }
  ],
  "page_action": {
    "default_popup" : "core/html/ces_popup.html"
  },
  "web_accessible_resources": [
    "lib/**/*"
  ]
}